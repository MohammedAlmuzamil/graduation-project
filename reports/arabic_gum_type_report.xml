<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="arabic_gum_type_report" model="ir.actions.report">
        <field name="name">Arabic Gum Type Report</field>
        <field name="model">arabic.gum.type</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_arabic_gum_type"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.arabic_gum_type_report_template</field>
    </record>

    <template id="arabic_gum_type_report_template">
        <t t-call="web.external_layout">
            <main>
                <t t-set="time" t-value="datetime.datetime.now()"/>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="doc.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (doc.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>
                                <td>
                                    <h2 t-field="doc.env.company.name"/>
                                    <p t-field="doc.env.company.street"/>
                                    <p>
                                        <span t-field="doc.env.company.phone"/>
                                        |
                                        <span t-field="doc.env.company.email"/>
                                    </p>
                                </td>
                                <td style="width:150px; text-align:right;">
                                    <h3>Arabic Gum Type Report</h3>
                                    <p><b>Date:</b> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                                    <p><b>Ref:</b> <t t-esc="doc.ref"/></p>
                                </td>
                            </tr>
                        </table>

                        <hr/>

                        <div style="font-size:13px; margin-bottom:10px;">
                            <p><b>Arabic Gum ID:</b> <t t-esc="doc.name"/></p>
                            <p><b>Total Quantity:</b> <t t-esc="doc.total_quantity"/> KG</p>
                            <p><b>Warehouses:</b>
                                <t t-if="doc.warehouse_ids">
                                    <t t-esc="', '.join([w.name for w in doc.warehouse_ids])"/>
                                </t>
                                <t t-else="">No warehouses assigned</t>
                            </p>
                        </div>

                        <table class="sale-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr style="background-color:#eb861e; color:white;">
                                    <th>#</th>
                                    <th>Gum Type</th>
                                    <th>Color</th>
                                    <th>Quality</th>
                                    <th>Quantity (KG)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_gum_ids" t-as="line">
                                    <tr>
                                        <td t-esc="line.id"/>
                                        <td t-esc="dict(line._fields['arabic_gum_type'].selection).get(line.arabic_gum_type)"/>
                                        <td t-esc="dict(line._fields['color'].selection).get(line.color)"/>
                                        <td t-esc="dict(line._fields['quality'].selection).get(line.quality)"/>
                                        <td t-esc="line.quantity"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <table style="width:100%; margin-top:20px; font-size:12px; color:#555;">
                            <tr>
                                <td style="text-align:left;">
                                    Prepared by: <t t-esc="doc.env.user.name or 'System'"/>
                                </td>
                                <td style="text-align:right;">
                                    Page <span class="pagenum"/>
                                </td>
                            </tr>
                        </table>

                    </div>
                </t>
            </main>

            <style type="text/css" media="print">
                * { -webkit-print-color-adjust: exact !important; }
                .sale-table th, .sale-table td { border:1px solid #ddd; padding:5px; font-size:12px; }
                .sale-table th { background-color:#eb861e !important; color:white !important; }
                .page { font-family: Arial, Helvetica, sans-serif; font-size:12px; padding:15px; color:#222; }
                hr { border:none; border-top:1px solid #ddd; margin:8px 0; }
                .pagenum:after { content: counter(page); }
            </style>
        </t>
    </template>
</odoo>
