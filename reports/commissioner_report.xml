<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="commissioner_report" model="ir.actions.report">
        <field name="name">Commissioner Report</field>
        <field name="model">commissioner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_commissioner"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.commissioner_report_template</field>
    </record>

    <template id="commissioner_report_template">
        <t t-call="web.external_layout">
            <main>

                <t t-set="all_commissioners" t-value="docs"/>

                <t t-foreach="all_commissioners" t-as="doc">
                    <div class="page">

                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="doc.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (doc.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>

                                <td>
                                    <h2 t-field="doc.env.company.name"/>
                                    <p t-field="doc.env.company.street"/>
                                    <p>
                                        <span t-field="doc.env.company.phone"/>
                                        |
                                        <span t-field="doc.env.company.email"/>
                                    </p>
                                </td>

                                <td style="width:150px; text-align:right;">
                                    <h3>Commissioner Report</h3>
                                    <p><b>Ref:</b> <t t-esc="doc.ref or '-'"/></p>
                                    <p><b>Date:</b> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                                </td>
                            </tr>
                        </table>

                        <hr/>

                        <table class="commissioner-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr>
                                    <th>Commissioner ID</th>
                                    <th>Commissioner Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td t-esc="doc.comm_id or '-'"/>
                                    <td t-esc="doc.name or '-'"/>
                                    <td t-esc="doc.phone or '-'"/>
                                    <td t-esc="doc.email or '-'"/>
                                    <td t-esc="doc.address.name.name or '-'"/>
                                </tr>
                            </tbody>
                        </table>

                        <table style="width:100%; margin-top:20px; font-size:12px; color:#555;">
                            <tr>
                                <td style="text-align:left;">
                                    Prepared by:
                                    <span t-esc="doc.env.user.name"/>
                                </td>
                                <td style="text-align:right;">
                                    Page <span class="pagenum"/>
                                </td>
                            </tr>
                        </table>

                    </div>
                </t>

            </main>

            <style type="text/css" media="print">
                * { -webkit-print-color-adjust: exact !important; }

                .commissioner-table th,
                .commissioner-table td {
                    border: 1px solid #ddd;
                    padding: 5px;
                    font-size: 12px;
                }

                .commissioner-table th {
                    background-color: #eb861e !important;
                    color: white !important;
                }

                .page {
                    font-family: Arial, Helvetica, sans-serif;
                    font-size: 12px;
                    padding: 15px;
                    color: #222;
                }

                hr {
                    border: none;
                    border-top: 1px solid #ddd;
                    margin: 8px 0;
                }

                .pagenum:after {
                    content: counter(page);
                }
            </style>

        </t>
    </template>

</odoo>
