<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="driver_report" model="ir.actions.report">
        <field name="name">Driver Report</field>
        <field name="model">driver</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_driver"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.driver_report_template</field>
    </record>

    <template id="driver_report_template">
        <t t-call="web.external_layout">
            <main>
                <t t-set="time" t-value="datetime.datetime.now()"/>
                <t t-foreach="docs" t-as="driver">
                    <div class="page">
                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="driver.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (driver.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>
                                <td>
                                    <h2 t-field="driver.env.company.name"/>
                                    <p t-field="driver.env.company.street"/>
                                    <p>
                                        <span t-field="driver.env.company.phone"/>
                                        |
                                        <span t-field="driver.env.company.email"/>
                                    </p>
                                </td>
                                <td style="width:150px; text-align:right;">
                                    <h3>Driver Report</h3>
                                    <p><b>Date:</b> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                                </td>
                            </tr>
                        </table>

                        <hr/>

                        <table class="sale-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr style="background-color:#eb861e; color:white;">
                                    <th>Ref</th>
                                    <th>Driver ID</th>
                                    <th>Driver Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-esc="driver.ref or '-'"/>
                                    <td t-esc="driver.driver_id or '-'"/>
                                    <td t-esc="driver.name or '-'"/>
                                    <td t-esc="driver.phone or '-'"/>
                                    <td t-esc="driver.email or '-'"/>
                                    <td t-esc="driver.address.name.name or '-'"/>
                                </tr>
                            </tbody>
                        </table>

                        <table style="width:100%; margin-top:20px; font-size:12px; color:#555;">
                            <tr>
                                <td style="text-align:left;">
                                    Prepared by: <span t-esc="driver.env.user.name or 'System'"/>
                                </td>
                                <td style="text-align:right;">
                                    Page <span class="pagenum"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </main>

            <style type="text/css" media="print">
                * { -webkit-print-color-adjust: exact !important; }
                .sale-table th, .sale-table td { border:1px solid #ddd; padding:5px; font-size:12px; }
                .sale-table th { background-color:#eb861e !important; color:white !important; }
                .page { font-family: Arial, Helvetica, sans-serif; font-size:12px; padding:15px; color:#222; }
                hr { border:none; border-top:1px solid #ddd; margin:8px 0; }
                .pagenum:after { content: counter(page); }
            </style>
        </t>
    </template>
</odoo>
