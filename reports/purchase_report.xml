<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_report" model="ir.actions.report">
        <field name="name">Purchase Report</field>
        <field name="model">purchase</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_purchase"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.purchase_report_template</field>
    </record>

    <template id="purchase_report_template">
        <t t-call="web.external_layout">
            <main>
                <t t-set="all_grand_total" t-value="sum(doc.total_price for doc in docs)"/>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="doc.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (doc.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>
                                <td>
                                    <h2 t-field="doc.env.company.name"/>
                                    <p t-field="doc.env.company.street"/>
                                    <p>
                                        <span t-field="doc.env.company.phone"/>
                                        |
                                        <span t-field="doc.env.company.email"/>
                                    </p>
                                </td>
                            </tr>
                        </table>

                        <table style="width:60%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td>
                                    <b>Purchase Ref</b>
                                </td>
                                <td t-esc="doc.ref"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Purchase Date</b>
                                </td>
                                <td t-esc="doc.purchase_date"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Commissioner</b>
                                </td>
                                <td t-esc="doc.commissioner_id.name"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Warehouse</b>
                                </td>
                                <td t-esc="doc.warehouse_id.name"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Purchase Order</b>
                                </td>
                                <td t-esc="doc.order_id.name"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Note</b>
                                </td>
                                <td t-esc="doc.description or '-'"/>
                            </tr>
                        </table>

                        <table class="purchase-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr style="background-color:#eb861e; color:white;">
                                    <th>Arabic Gum Type</th>
                                    <th>Color</th>
                                    <th>Quality</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td t-esc="dict(line._fields['gum_type'].selection).get(line.gum_type)"/>
                                        <td t-esc="dict(line._fields['color'].selection).get(line.color)"/>
                                        <td t-esc="dict(line._fields['quality'].selection).get(line.quality)"/>
                                        <td t-esc="line.quantity"/>
                                        <td t-esc="line.unit_price"/>
                                        <td t-esc="line.total_price"/>
                                    </tr>
                                </t>
                                <tr style="font-weight:bold; background:#f0f0f0;">
                                    <td colspan="3" style="text-align:right;">TOTAL</td>
                                    <td t-esc="sum(line.quantity for line in doc.line_ids)"/>
                                    <td t-esc="sum(line.unit_price for line in doc.line_ids)"/>
                                    <td t-esc="doc.total_price"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>

                <div>
                    <table style="width:100%; border-collapse:collapse; font-size:14px;">
                        <tr style="background:#d9edf7; font-weight:bold;">
                            <td style="text-align:center;">TOTAL PURCHASE PRICE</td>
                            <td t-esc="all_grand_total"/>
                        </tr>
                    </table>
                </div>


            </main>
        </t>

        <style type="text/css" media="print">
            * { -webkit-print-color-adjust: exact !important; }
            .purchase-table th, .purchase-table td { border:1px solid #ddd; padding:5px; font-size:12px;
            vertical-align:top; }
            .purchase-table th { background-color:#eb861e !important; color:white !important; }
            .page { font-family: Arial, Helvetica, sans-serif; font-size:12px; padding:15px; color:#222; }
            .pagenum:after { content: counter(page); }
        </style>
    </template>
</odoo>
