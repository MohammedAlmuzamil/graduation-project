<odoo>

    <record id="inventory_of_tallying_product_view_tree" model="ir.ui.view">
        <field name="name">inventory of tallying product tree</field>
        <field name="model">inventory.of.tallying.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="product_id"/>
                <field name="date"/>
                <field name="supervisor_id"/>
                <field name="warehouse_id"/>
                <field name="description"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="inventory_of_tallying_product_view_form" model="ir.ui.view">
        <field name="name">inventory of tallying product</field>
        <field name="model">inventory.of.tallying.product</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_cleaned"
                            string="Clean Gums"
                            type="object"
                            class="btn-success"
                            invisible ="state == 'cleaned'"
                            />
                    <button name="action_view_gum_stock"
                            string="View Gum Stock"
                            type="object"
                            class="btn-info"
                            invisible ="state == 'cleaned'"
                            />
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Product ID">
                            <field name="active" invisible="True"/>
                            <field name="state" invisible="1"/>
                            <field name="name"/>
                            <field name="product_id" placeholder="Raw Cum ID"/>
                        </group>
                        <group string="Additional info">
                            <field name="supervisor_id" placeholder="Supervisor Name"/>
                            <field name="warehouse_id" placeholder="Warehouse Name"/>
                            <field name="date"/>
                        </group>
                        <group string="Description">
                            <field name="description" placeholder="Write Your Notes Here"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Cleaning Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                <field name="arabic_gum_type"/>
                                <field name="quantity"/>
                                <field name="net_quantity"/>
                                <field name="refined_quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Refined Quantity: Kg :
                        <field name="total_refined_quantity" readonly="1"/>
                    </div>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="inventory_of_tallying_product_view_search" model="ir.ui.view">
        <field name="name">inventory of tallying product</field>
        <field name="model">inventory.of.tallying.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="product_id"/>
            </search>
        </field>
    </record>



    <record id="inventory_of_tallying_product_action" model="ir.actions.act_window">
        <field name="name">inventory of tallying product</field>
        <field name="res_model">inventory.of.tallying.product</field>
    </record>




    <menuitem
          id="inventory_of_tallying_product_menu_item"
          name="Inventory Of Tallying Products"
          parent="inventory_management_menu"
          action="inventory_of_tallying_product_action"
    />
</odoo>