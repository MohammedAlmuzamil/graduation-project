<odoo>

    <record id="purity_storage_view_tree" model="ir.ui.view">
        <field name="name">purity storage tree</field>
        <field name="model">purity.storage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="talling_id"/>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="storing_date"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="purity_storage_view_form" model="ir.ui.view">
        <field name="name">purity storage form</field>
        <field name="model">purity.storage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group string="General info">
                            <field name="talling_id"/>
                            <field name="name"/>
                            <field name="active" invisible="True"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group string="Date info">
                            <field name="storing_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Purity Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="arabic_gum_type"/>
                                    <field name="net_quantity"/>
                                    <field name="refined_quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Refined Quantity Kg :
                        <field name="total_refined_quantity" readonly="1"/>
                    </div>

                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Quantity Kg :
                        <field name="total_quantity" readonly="1"/>
                    </div>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="purity_storage_view_search" model="ir.ui.view">
        <field name="name">purity storage search</field>
        <field name="model">purity.storage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>



    <record id="purity_storage_action" model="ir.actions.act_window">
        <field name="name">purity storage</field>
        <field name="res_model">purity.storage</field>
    </record>




    <menuitem
          id="purity_storage_menu_item"
          name="Purity Storage"
          parent="operation_menu"
          action="purity_storage_action"
    />
</odoo>