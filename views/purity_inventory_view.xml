<odoo>

    <record id="purity_inventory_view_tree" model="ir.ui.view">
        <field name="name">purity inventory tree</field>
        <field name="model">purity.inventory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="purity_type"/>
                <field name="active" invisible="True"/>
                <field name="purity_qty"/>
                <field name="warehouse_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="purity_inventory_view_form" model="ir.ui.view">
        <field name="name">purity inventory form</field>
        <field name="model">purity.inventory</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="pure_id"/>
                            <field name="purity_type"/>
                            <field name="purity_qty"/>
                        </group>
                        <group string="Additional info">
                            <field name="warehouse_id"/>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="purity_inventory_view_search" model="ir.ui.view">
        <field name="name">purity inventory search</field>
        <field name="model">purity.inventory</field>
        <field name="arch" type="xml">
            <search>
                <field name="warehouse_id"/>
            </search>
        </field>
    </record>



    <record id="purity_inventory_action" model="ir.actions.act_window">
        <field name="name">purity inventory</field>
        <field name="res_model">purity.inventory</field>
    </record>




    <menuitem
          id="purity_inventory_menu_item"
          name="Purity Inventory"
          parent="inventory_management_menu"
          action="purity_inventory_action"
    />
</odoo>