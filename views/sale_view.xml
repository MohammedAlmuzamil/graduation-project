<odoo>

    <record id="sale_view_tree" model="ir.ui.view">
        <field name="name">sale tree</field>
        <field name="model">sale</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="active" invisible="True"/>
                <field name="warehouse_id"/>
                <field name="employee_id"/>
                <field name="customer_id"/>
                <field name="sale_date"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>

    <record id="sale_view_form" model="ir.ui.view">
        <field name="name">sale form</field>
        <field name="model">sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Confirm Sale" type="object" name="action_confirm_sale" class="btn-primary"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_related_employee"
                                type="object" icon="fa-user" string="Employee"
                                invisible="not employee_id"/>
                        <button name="action_open_related_customer"
                                type="object" icon="fa-user" string="Customer"
                                invisible="not customer_id"/>
                        <button name="action_open_related_warehouse"
                                type="object" icon="fa-cubes" string="Warehouse"
                                invisible="not warehouse_id"/>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
<!--                    <field name="is_returned" widget="statusbar" options="{'invisible': [('is_returned','=',False)]}"/>-->
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="name"/>
                            <field name="active" invisible="True"/>
                            <field name="warehouse_id"/>
                            <field name="employee_id"/>
                            <field name="customer_id"/>
                        </group>
                        <group string="Additional info">
                            <field name="sale_date"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sale Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="gum_type"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" readonly="1"/>
                                    <field name="subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="sale_view_search" model="ir.ui.view">
        <field name="name">sale search</field>
        <field name="model">sale</field>
        <field name="arch" type="xml">
            <search>
                <field name="warehouse_id"/>
                <field name="name"/>
                <field name="employee_id"/>
            </search>
        </field>
    </record>



    <record id="sale_action" model="ir.actions.act_window">
        <field name="name">sale</field>
        <field name="res_model">sale</field>
    </record>




    <menuitem
          id="sale_menu_item"
          name="Sales"
          parent="sales_menu"
          action="sale_action"
    />
</odoo>