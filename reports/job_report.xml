<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="job_report" model="ir.actions.report">
        <field name="name">Job Report</field>
        <field name="model">job</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_job"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.job_report_template</field>
    </record>

    <template id="job_report_template">
        <t t-call="web.external_layout">
            <main>
                <t t-set="time" t-value="datetime.datetime.now()"/>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="doc.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (doc.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>
                                <td>
                                    <h2 t-field="doc.env.company.name"/>
                                    <p t-field="doc.env.company.street"/>
                                    <p>
                                        <span t-field="doc.env.company.phone"/>
                                        |
                                        <span t-field="doc.env.company.email"/>
                                    </p>
                                </td>
                                <td style="width:150px; text-align:right;">
                                    <h3>Job Report</h3>
                                    <p><b>Date:</b> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                                </td>
                            </tr>
                        </table>

                        <hr/>

                        <table style="width:60%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td><b>Job ID</b></td>
                                <td t-esc="doc.job_number or '-'"/>
                            </tr>
                            <tr>
                                <td><b>Job Name</b></td>
                                <td t-esc="doc.name or '-'"/>
                            </tr>
                            <tr>
                                <td><b>Job Grade</b></td>
                                <td t-esc="doc.grade or '-'"/>
                            </tr>
                        </table>

                        <table class="sale-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr style="background-color:#eb861e; color:white;">
                                    <th>Employee No.</th>
                                    <th>Employee Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.employee_ids" t-as="emp">
                                    <tr>
                                        <td t-esc="emp.id"/>
                                        <td t-esc="emp.name"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div style="margin-top:10px; font-weight:bold;">
                            Total Employees: <t t-esc="doc.employee_count or 0"/>
                        </div>

                        <table style="width:100%; margin-top:20px; font-size:12px; color:#555;">
                            <tr>
                                <td style="text-align:left;">
                                    Prepared by: <span t-esc="doc.env.user.name or 'System'"/>
                                </td>
                                <td style="text-align:right;">
                                    Page <span class="pagenum"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </main>

            <style type="text/css" media="print">
                * { -webkit-print-color-adjust: exact !important; }
                .sale-table th, .sale-table td { border:1px solid #ddd; padding:5px; font-size:12px; }
                .sale-table th { background-color:#eb861e !important; color:white !important; }
                .page { font-family: Arial, Helvetica, sans-serif; font-size:12px; padding:15px; color:#222; }
                hr { border:none; border-top:1px solid #ddd; margin:8px 0; }
                .pagenum:after { content: counter(page); }
            </style>
        </t>
    </template>
</odoo>
