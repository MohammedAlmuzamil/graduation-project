<odoo>

    <record id="market_view_tree" model="ir.ui.view">
        <field name="name">market tree</field>
        <field name="model">market</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="active" invisible="True"/>
                <field name="market_id"/>
                <field name="address_id"/>
            </tree>
        </field>
    </record>

    <record id="market_view_form" model="ir.ui.view">
        <field name="name">market form</field>
        <field name="model">market</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Market info">
                            <field name="name"/>
                            <field name="active" invisible="True"/>
                            <field name="market_id"/>
                            <field name="address_id"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="market_view_search" model="ir.ui.view">
        <field name="name">market search</field>
        <field name="model">market</field>
        <field name="arch" type="xml">
            <search>
                <field name="market_id"/>
            </search>
        </field>
    </record>



    <record id="market_action" model="ir.actions.act_window">
        <field name="name">market</field>
        <field name="res_model">market</field>
    </record>




    <menuitem
          id="market_menu_item"
          name="Markets"
          parent="location_menu"
          action="market_action"
    />
</odoo>