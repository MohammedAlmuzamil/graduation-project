<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inventory_of_tallying_product_report" model="ir.actions.report">
        <field name="name">Tallying Products Report</field>
        <field name="model">inventory.of.tallying.product</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_inventory_of_tallying_product"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.inventory_of_tallying_product_report_template</field>
    </record>
    <template id="inventory_of_tallying_product_report_template">
        <t t-set="report_encoding" t-value="'utf-8'"/>
        <t t-call="web.html_container">
            <div class="page">

                <div class="report-header" style="display:flex; justify-content: space-between; align-items:flex-start;">
                    <div class="company-left">
                        <img t-if="docs and docs[0].env.company.logo"
                             t-att-src="'data:image/png;base64,%s' % (docs[0].env.company.logo.decode())"
                             style="width: 100px; height: auto; margin-bottom:10px;"/>
                        <h1 t-field="docs and docs[0].env.company.name"/>
                        <p t-field="docs and docs[0].env.company.street"/>
                        <p>
                            <span t-field="docs and docs[0].env.company.phone"/>
                            |
                            <span t-field="docs and docs[0].env.company.email"/>
                        </p>
                    </div>

                    <div class="report-meta" style="text-align:right;">
                        <p>
                            <strong>Date:</strong>
                            <t t-esc="time.strftime('%Y-%m-%d')"/>
                        </p>
                    </div>
                </div>

                <hr/>

                <table class="inventory-table"
                       style="width:100%; border-collapse: collapse; text-align:center; margin-top:10px;">
                    <thead style="background-color:#2F5597; color:white;">
                        <tr>
                            <th>Product ID</th>
                            <th>Arabic Gum Type</th>
                            <th>Original Quantity</th>
                            <th>Net Quantity</th>
                            <th>Refined Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr>
                                    <td t-esc="doc.product_id"/>
                                    <td t-esc="line.gum_type_id.name or '-'"/>
                                    <td t-esc="line.original_quantity"/>
                                    <td t-esc="line.net_quantity"/>
                                    <td t-esc="line.refined_quantity"/>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr style="font-weight:bold;">
                            <td>Total</td>
                            <td>-</td>
                            <td t-esc="sum(line.original_quantity for doc in docs for line in doc.line_ids)"/>
                            <td t-esc="sum(line.net_quantity for doc in docs for line in doc.line_ids)"/>
                            <td t-esc="sum(line.refined_quantity for doc in docs for line in doc.line_ids)"/>
                        </tr>
                    </tfoot>
                </table>

                <footer class="report-footer"
                        style="display:flex; justify-content: space-between; margin-top:20px; font-size:11px; color:#555;">
                    <div>
                        Prepared by:
                        <span t-esc="docs and docs[0].env.uid and docs[0].env.user.name or 'System'"/>
                    </div>
                    <div class="page-number">
                        Page <span class="pagenum"/>
                    </div>
                </footer>

            </div>
        </t>

        <style>
            .inventory-table th, .inventory-table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            .inventory-table th {
                background-color: #2F5597;
                color: white;
            }

            .page {
                font-family: Arial, Helvetica, sans-serif;
                font-size: 12px;
                color: #222;
                padding: 20px;
            }

            hr {
                border: none;
                border-top: 1px solid #ddd;
                margin: 12px 0;
            }

            @media print {
                .page {
                    padding: 10mm;
                }
                .pagenum:after {
                    content: counter(page);
                }
            }
        </style>
    </template>


</odoo>