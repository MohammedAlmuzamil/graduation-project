<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="unit_report" model="ir.actions.report">
        <field name="name">Unit Report</field>
        <field name="model">unit</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_unit"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.unit_report_template</field>
    </record>

    <template id="unit_report_template">
        <t t-call="web.external_layout">
            <main>
                <t t-set="time" t-value="datetime.datetime.now()"/>
                <t t-foreach="docs" t-as="u">
                    <div class="page">
                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="u.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (u.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>
                                <td>
                                    <h2 t-field="u.env.company.name"/>
                                    <p t-field="u.env.company.street"/>
                                    <p>
                                        <span t-field="u.env.company.phone"/>
                                        |
                                        <span t-field="u.env.company.email"/>
                                    </p>
                                </td>
                                <td style="width:150px; text-align:right;">
                                    <h3>Unit Report</h3>
                                    <p><b>Date:</b> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                                </td>
                            </tr>
                        </table>

                        <hr/>

                        <table class="sale-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr style="background-color:#eb861e; color:white;">
                                    <th>Ref</th>
                                    <th>Unit ID</th>
                                    <th>Unit Name</th>
                                    <th>Gum Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-esc="u.ref"/>
                                    <td t-esc="u.name"/>
                                    <td t-esc="dict(u.fields_get(['unit_name'])['unit_name']['selection'])[u.unit_name]"/>
                                    <td t-esc="u.code"/>
                                </tr>
                            </tbody>
                        </table>

                        <table style="width:100%; margin-top:20px; font-size:12px; color:#555;">
                            <tr>
                                <td style="text-align:left;">
                                    Prepared by: <t t-esc="u.env.user.name or 'System'"/>
                                </td>
                                <td style="text-align:right;">
                                    Page <span class="pagenum"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </main>

            <style type="text/css" media="print">
                * { -webkit-print-color-adjust: exact !important; }
                .sale-table th, .sale-table td { border:1px solid #ddd; padding:5px; font-size:12px; }
                .sale-table th { background-color:#eb861e !important; color:white !important; }
                .page { font-family: Arial, Helvetica, sans-serif; font-size:12px; padding:15px; color:#222; }
                hr { border:none; border-top:1px solid #ddd; margin:8px 0; }
                .pagenum:after { content: counter(page); }
            </style>
        </t>
    </template>
</odoo>
