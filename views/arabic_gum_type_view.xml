<odoo>

    <record id="arabic_gum_type_view_tree" model="ir.ui.view">
        <field name="name">arabic gum type tree</field>
        <field name="model">arabic.gum.type</field>
        <field name="arch" type="xml">
<!--            decoration-success="is_cleaned" decoration-danger="not is_cleaned"-->
            <tree string="Arabic Gum Types">
                <field name="ref"/>
                <field name="name"/>
                <field name="date"/>
                <field name="warehouse_ids"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="arabic_gum_type_view_form" model="ir.ui.view">
        <field name="name">arabic gum type form</field>
        <field name="model">arabic.gum.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Arabic Gum Type">
                            <field name="active" invisible="True"/>
                            <field name="name"/>
                        </group>
                        <group string="Additional info">
                            <field name="date"/>
                            <field name="warehouse_ids" widget="many2many_tags" placeholder="Warehouse 123"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Arabic Gum Types Details">
                            <field name="line_gum_ids">
                                <tree editable="bottom">
                                    <field name="arabic_gum_type"/>
                                    <field name="quality"/>
                                    <field name="color"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Quantity Kg :
                        <field name="total_quantity" readonly="1"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="arabic_gum_type_view_search" model="ir.ui.view">
        <field name="name">arabic gum type search</field>
        <field name="model">arabic.gum.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>

                <filter name="talha_gum" string="Talha Gum"
                        domain="[('line_gum_ids.arabic_gum_type', '=', 'talha_gum')]"/>
                <filter name="hashab_gum" string="Hashab Gum"
                        domain="[('line_gum_ids.arabic_gum_type', '=', 'hashab_gum')]"/>
                <filter name="olibanum_gum" string="Olibanum Gum"
                        domain="[('line_gum_ids.arabic_gum_type', '=', 'olibanum_gum')]"/>

                <filter name="quality_excellent" string="Quality Excellent"
                        domain="[('line_gum_ids.quality', '=', 'excellent')]"/>
                <filter name="quality_very_good" string="Quality Very Good"
                        domain="[('line_gum_ids.quality', '=', 'very_good')]"/>
                <filter name="quality_good" string="Quality Good"
                        domain="[('line_gum_ids.quality', '=', 'good')]"/>
                <filter name="quality_average" string="Quality Average"
                        domain="[('line_gum_ids.quality', '=', 'average')]"/>
                <filter name="quality_poor" string="Quality Poor"
                        domain="[('line_gum_ids.quality', '=', 'poor')]"/>

            </search>
        </field>
    </record>


    <record id="arabic_gum_type_action" model="ir.actions.act_window">
        <field name="name">arabic gum type</field>
        <field name="res_model">arabic.gum.type</field>
    </record>


    <menuitem
            id="arabic_gum_type_menu_item"
            name="Arabic Gum Types"
            parent="product_menu"
            action="arabic_gum_type_action"
    />
</odoo>