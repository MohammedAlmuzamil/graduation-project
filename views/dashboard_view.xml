    <record id="view_report_period_wizard" model="ir.ui.view">
    <field name="name">report period wizard form</field>
    <field name="model">report.period.wizard</field>
    <field name="arch" type="xml">
        <form string="report dashboard">
            <sheet>
                <group>
                    <h2>Report Period</h2>
                    <field name="report_type" placeholder="Choose report type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <button string="Print" type="object" name="print_period_report" class="btn-primary"/>

                    <separator string=" " colspan="2"/>

                    <h2>report relavent</h2>
                    <div class="o_horizontal_separator"/>
                    <group col="2">
                        <button string="arabic gum type" type="object"
                                name="print_relative_report" args="('gum_types_chart',)"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>

