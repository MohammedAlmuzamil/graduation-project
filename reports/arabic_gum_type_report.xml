<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="arabic_gum_type_report" model="ir.actions.report">
        <field name="name">Arabic Gum Type Report</field>
        <field name="model">arabic.gum.type</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_arabic_gum_type"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.arabic_gum_type_report_template</field>
    </record>

    <template id="arabic_gum_type_report_template">
        <t t-set="report_encoding" t-value="'utf-8'"/>
        <t t-call="web.html_container">
            <div class="page">

                <div class="report-header" style="display:flex; justify-content: space-between; align-items:flex-start;">
                    <div class="company-left">
                        <img t-if="docs and docs[0].env.company.logo"
                             t-att-src="'data:image/png;base64,%s' % (docs[0].env.company.logo.decode())"
                             style="width: 100px; height: auto; margin-bottom:10px;"/>
                        <h1 t-field="docs and docs[0].env.company.name"/>
                        <p t-field="docs and docs[0].env.company.street"/>
                        <p>
                            <span t-field="docs and docs[0].env.company.phone"/> |
                            <span t-field="docs and docs[0].env.company.email"/>
                        </p>
                    </div>
                    <div class="report-meta" style="text-align:right;">
                        <h2>Arabic Gum Type Report</h2>
                        <p>
                            <strong>Date:</strong>
                            <t t-esc="time.strftime('%Y-%m-%d')"/>
                        </p>
                    </div>
                </div>

                <div style="text-align:left; font-size:13px; font-weight:bold; margin-bottom:10px;">
                    <t t-esc="docs and docs[0].ref or ''"/>
                </div>

                <table class="gum-type-table"
                       style="width:100%; border-collapse: collapse; text-align:center; margin-top:10px;">
                    <thead style="background-color:#2F5597; color:white;">
                        <tr>
                            <th>Gum ID</th>
                            <th>Gum Type</th>
                            <th>Color</th>
                            <th>Quality</th>
                            <th>Quantity (KG)</th>
                            <th>Date</th>
                            <th>Warehouse(s)</th>
                            <th>Cleaned</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="gum" t-key="gum">
                            <tr>
                                <td t-esc="gum.name or '-'"/>
                                <td t-esc="dict(gum._fields['arabic_gum_type'].selection).get(gum.arabic_gum_type, '-')"/>
                                <td t-esc="dict(gum._fields['color'].selection).get(gum.color, '-')"/>
                                <td t-esc="dict(gum._fields['quality'].selection).get(gum.quality, '-')"/>
                                <td t-esc="gum.quantity"/>
                                <td t-esc="gum.date and gum.date.strftime('%Y-%m-%d') or '-'"/>
                                <td>
                                    <t t-if="gum.warehouse_ids">
                                        <t t-esc="', '.join([wh.name for wh in gum.warehouse_ids])"/>
                                    </t>
                                    <t t-if="not gum.warehouse_ids">
                                        <span>No warehouses assigned</span>
                                    </t>
                                </td>

                                <td>
                                    <t t-if="gum.is_cleaned">Yes</t>
                                    <t t-if="not gum.is_cleaned">No</t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <footer class="report-footer"
                        style="display:flex; justify-content: space-between; margin-top:20px; font-size:11px; color:#555;">
                    <div>
                        Prepared by:
                        <span t-esc="docs and docs[0].env.uid and docs[0].env.user.name or 'System'"/>
                    </div>
                    <div class="page-number">
                        Page <span class="pagenum"/>
                    </div>
                </footer>

            </div>
        </t>

        <style>
            .gum-type-table th, .gum-type-table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            .gum-type-table th {
                background-color: #2F5597;
                color: white;
            }

            .page {
                font-family: Arial, Helvetica, sans-serif;
                font-size: 12px;
                color: #222;
                padding: 20px;
            }

            hr {
                border: none;
                border-top: 1px solid #ddd;
                margin: 12px 0;
            }

            @media print {
                .page {
                    padding: 10mm;
                }
                .pagenum:after {
                    content: counter(page);
                }
            }
        </style>
    </template>
</odoo>
