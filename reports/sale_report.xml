<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_report" model="ir.actions.report">
        <field name="name">Sale Report</field>
        <field name="model">sale</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_sale"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.sale_report_template</field>
    </record>

    <template id="sale_report_template">
        <t t-call="web.external_layout">
            <main>



                <t t-set="all_grand_total" t-value="sum(doc.amount_total for doc in docs)"/>


                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="doc.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (doc.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>
                                <td>
                                    <h2 t-field="doc.env.company.name"/>
                                    <p t-field="doc.env.company.street"/>
                                    <p>
                                        <span t-field="doc.env.company.phone"/>
                                        |
                                        <span t-field="doc.env.company.email"/>
                                    </p>
                                </td>
                            </tr>
                        </table>

                        <!--                        <div class="header" t-if="options.get('show_period')">-->
                        <!--                            <h3>Sales During Period From :-->
                        <!--                                <span t-esc="options.get('date_from')"/>-->
                        <!--                                To : <span t-esc="options.get('date_to')"/>-->
                        <!--                            </h3>-->
                        <!--                        </div>-->


                        <table style="width:60%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td>
                                    <b>Invoice Ref</b>
                                </td>
                                <td t-esc="doc.ref"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Invoice Number</b>
                                </td>
                                <td t-esc="doc.name"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Sale Date</b>
                                </td>
                                <td t-esc="doc.sale_date"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Employee</b>
                                </td>
                                <td t-esc="doc.employee_id.name"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Warehouse</b>
                                </td>
                                <td t-esc="doc.warehouse_id.name"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Customer</b>
                                </td>
                                <td t-esc="doc.customer_id.name"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Status</b>
                                </td>
                                <td t-esc="dict(doc._fields['state'].selection).get(doc.state)"/>
                            </tr>
                            <tr>
                                <td>
                                    <b>Order ID</b>
                                </td>
                                <td t-esc="doc.order_id.name"/>
                            </tr>
                        </table>

                        <table class="sale-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr style="background-color:#eb861e; color:white;">
                                    <th>Gum Type</th>
                                    <th>Qty</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td t-esc="dict(line._fields['gum_type'].selection).get(line.gum_type)"/>
                                        <td t-esc="line.quantity"/>
                                        <td t-esc="line.unit_price"/>
                                        <td t-esc="line.subtotal"/>
                                    </tr>
                                </t>
                                <tr style="font-weight:bold; background:#f0f0f0;">
                                    <td colspan="1" style="text-align:right;">TOTAL</td>
                                    <td t-esc="sum(line.quantity for line in doc.line_ids)"/>
                                    <td t-esc="sum(line.unit_price for line in doc.line_ids)"/>
                                    <td t-esc="doc.amount_total"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
                <div>
                    <table style="width:100%; border-collapse:collapse; font-size:14px;">
                        <tr style="background:#d9edf7; font-weight:bold;">
                            <td style="text-align:center;">TOTAL SALES PRICE</td>
                            <td t-esc="all_grand_total"/>
                        </tr>
                    </table>
                </div>



            </main>
        </t>

        <style type="text/css" media="print">
            * { -webkit-print-color-adjust: exact !important; }
            .sale-table th, .sale-table td { border:1px solid #ddd; padding:5px; font-size:12px; }
            .sale-table th { background-color:#eb861e !important; color:white !important; }
            .page { font-family: Arial, Helvetica, sans-serif; font-size:12px; padding:15px; color:#222; }
            .pagenum:after { content: counter(page); }
        </style>
    </template>
</odoo>
