<odoo>

    <record id="cities_view_tree" model="ir.ui.view">
        <field name="name">cities tree</field>
        <field name="model">cities</field>
        <field name="arch" type="xml">
            <tree string="cities">
                <field name="city_id"/>
                <field name="name"/>
                <field name="state_id"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="cities_view_form" model="ir.ui.view">
        <field name="name">cities form</field>
        <field name="model">cities</field>
        <field name="arch" type="xml">
            <form string="cities">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group string="General info">
                            <field name="city_id"/>
                            <field name="name"/>
                            <field name="state_id"/>
                            <field name="active" invisible="True"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="cities_view_search" model="ir.ui.view">
        <field name="name">cities search</field>
        <field name="model">cities</field>
        <field name="arch" type="xml">
            <search>
                <field name="city_id"/>
            </search>
        </field>
    </record>



    <record id="cities_action" model="ir.actions.act_window">
        <field name="name">cities</field>
        <field name="res_model">cities</field>
    </record>




    <menuitem
          id="cities_menu_item"
          name="cities"
          parent="location_menu"
          action="cities_action"
    />
</odoo>