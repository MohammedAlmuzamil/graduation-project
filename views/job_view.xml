<odoo>

    <record id="job_view_tree" model="ir.ui.view">
        <field name="name">job tree</field>
        <field name="model">job</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="job_number"/>
                <field name="name"/>
                <field name="grade"/>
                <field name="employee_count"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="job_view_form" model="ir.ui.view">
        <field name="name">job form</field>
        <field name="model">job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="name"/>
                            <field name="active" invisible="True"/>
                            <field name="job_number"/>
                            <field name="grade"/>
                        </group>
                        <group string="Employees">
                            <field name="employee_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="job_view_search" model="ir.ui.view">
        <field name="name">job search</field>
        <field name="model">job</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>



    <record id="job_action" model="ir.actions.act_window">
        <field name="name">job</field>
        <field name="res_model">job</field>
    </record>




    <menuitem
          id="job_menu_item"
          name="Jobs"
          parent="human_resources_menu"
          action="job_action"
    />
</odoo>