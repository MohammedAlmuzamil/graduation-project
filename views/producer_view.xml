<odoo>

    <record id="producer_view_tree" model="ir.ui.view">
        <field name="name">producer tree</field>
        <field name="model">producer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="active" invisible="True"/>
                <field name="producer_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="producer_view_form" model="ir.ui.view">
        <field name="name">producer form</field>
        <field name="model">producer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="name"/>
                            <field name="producer_id"/>
                        </group>
                        <group string="Additional info">
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="producer_view_search" model="ir.ui.view">
        <field name="name">producer search</field>
        <field name="model">producer</field>
        <field name="arch" type="xml">
            <search>
                <field name="producer_id"/>
            </search>
        </field>
    </record>



    <record id="producer_action" model="ir.actions.act_window">
        <field name="name">producer</field>
        <field name="res_model">producer</field>
    </record>




    <menuitem
          id="producer_menu_item"
          name="Producers"
          parent="partners_menu"
          action="producer_action"
    />
</odoo>