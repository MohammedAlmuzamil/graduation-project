<odoo>

    <record id="purchase_view_tree" model="ir.ui.view">
        <field name="name">purchase tree</field>
        <field name="model">purchase</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="purchase_xlsx_report"
                            type="object"
                            string="Print Excel Report"
                            class="btn-success"
                    />
                    <button name="action_analyze_and_show"
                            type="object"
                            string="Analyze Purchases"
                            class="btn-primary"
                    />
                </header>
                <field name="ref"/>
                <field name="order_id"/>
                <field name="name"/>
                <field name="purchase_date"/>
                <field name="total_price"/>
                <field name="description"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>




    <record id="purchase_view_form" model="ir.ui.view">
        <field name="name">purchase form</field>
        <field name="model">purchase</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Confirm"
                            type="object"
                            name="confirm_purchase"
                            class="btn-primary"
                            invisible="state == 'purchased'"
                    />
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="name"/>
                            <field name="order_id" placeholder="Order ID Reference"/>
                            <field name="purchase_date"/>
                        </group>
                        <group string="Additional info">
                            <field name="commissioner_id" placeholder="Commissioner Name"/>
                            <field name="warehouse_id" placeholder="Warehouse Name"/>
                            <field name="description" placeholder="Write Your Notes Here"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Purchase Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="gum_type"/>
                                    <field name="color"/>
                                    <field name="quality"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total_price" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Purchase $ :
                        <field name="total_price" readonly="1"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_purchase_analysis_wizard" model="ir.ui.view">
        <field name="name">purchase.analysis.wizard.form</field>
        <field name="model">purchase.analysis.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase AI Analysis" class="ai_analysis_popup">
                <sheet>
                    <field name="analysis_text"
                           widget="html"
                           readonly="1"
                           nolabel="1"
                           class="ai_analysis_content"/>
                </sheet>

                <footer>
                    <button string="Close"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="purchase_view_search" model="ir.ui.view">
        <field name="name">purchase search</field>
        <field name="model">purchase</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record id="purchase_action" model="ir.actions.act_window">
        <field name="name">purchase</field>
        <field name="res_model">purchase</field>
    </record>


    <menuitem
            id="purchase_menu_item"
            name="Purchases"
            parent="purchases_menu"
            action="purchase_action"
    />
</odoo>