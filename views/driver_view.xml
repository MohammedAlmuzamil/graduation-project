<odoo>

    <record id="driver_view_tree" model="ir.ui.view">
        <field name="name">driver tree</field>
        <field name="model">driver</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="driver_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="address"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="driver_view_form" model="ir.ui.view">
        <field name="name">driver form</field>
        <field name="model">driver</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Driver info">
                            <field name="driver_id"/>
                            <field name="name"/>
                            <field name="active" invisible="True"/>
                        </group>
                        <group>
                        <group string="Additional info">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address" placeholder="State Locality City"/>
                        </group>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="driver_view_search" model="ir.ui.view">
        <field name="name">driver search</field>
        <field name="model">driver</field>
        <field name="arch" type="xml">
            <search>
                <field name="driver_id"/>
            </search>
        </field>
    </record>



    <record id="driver_action" model="ir.actions.act_window">
        <field name="name">driver</field>
        <field name="res_model">driver</field>
    </record>




    <menuitem
          id="driver_menu_item"
          name="Drivers"
          parent="partners_menu"
          action="driver_action"
    />
</odoo>