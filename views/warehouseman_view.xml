<odoo>

    <record id="warehouseman_view_tree" model="ir.ui.view">
        <field name="name">warehouseman tree</field>
        <field name="model">warehouseman</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="warehouse_id"/>
                <field name="hire_date"/>
                <field name="email"/>
                <field name="address"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="warehouseman_view_form" model="ir.ui.view">
        <field name="name">warehouseman form</field>
        <field name="model">warehouseman</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group string="Additional info">
                            <field name="hire_date"/>
                            <field name="email"/>
                            <field name="address"
                                   options="{'no_create': False}"
                                   context="{'default_employee_id': active_id}"
                                   placeholder="State Locality City"
                            />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="warehouseman_view_search" model="ir.ui.view">
        <field name="name">warehouseman search</field>
        <field name="model">warehouseman</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="warehouse_id"/>
            </search>
        </field>
    </record>


    <record id="warehouseman_action" model="ir.actions.act_window">
        <field name="name">warehouseman</field>
        <field name="res_model">warehouseman</field>
    </record>


    <menuitem
            id="warehouseman_menu_item"
            name="Warehouseman"
            parent="assets_menu"
            action="warehouseman_action"
    />
</odoo>