<odoo>

    <record id="procure_order_view_tree" model="ir.ui.view">
        <field name="name">procure order tree</field>
        <field name="model">procure.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="commissioner_id"/>
                <field name="date"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="procure_order_view_form" model="ir.ui.view">
        <field name="name">procure order form</field>
        <field name="model">procure.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Done" bg_color="text-bg-success" invisible="state != 'done'"/>
                    <header>
                        <button name="action_draft" type="object" class="btn-warning" string="Draft"
                                invisible="state in ('draft','sent','to_approve','purchase','done')"/>
                        <button name="action_sent" type="object" class="btn-primary" string="Sent"
                                invisible="state != 'draft'"/>
                        <button name="action_to_approve" type="object" class="btn-secondary" string="To Approve"
                                invisible="state != 'sent'"/>
                        <button name="action_purchase" type="object" class="btn-info" string="Purchase"
                                invisible="state != 'to_approve'"/>
                        <button name="action_done" type="object" class="btn-success" string="Done"
                                invisible="state != 'purchase'"/>
                        <button name="action_cancel" type="object" class="btn-primary" string="Cancel"
                                invisible="state == 'done'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="name" readonly="state=='done'"/>
                        </group>
                        <group string="Additional info">
                            <field name="commissioner_id" placeholder="Commissioner Name" readonly="state=='done'"/>
                            <field name="date" readonly="state=='done'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Procure Orders Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="arabic_gum_type"/>
                                    <field name="quality"/>
                                    <field name="color"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Quantity Kg :
                        <field name="total_amount_quantity" readonly="1"/>
                    </div>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Subtotal $ :
                        <field name="total_amount" readonly="1"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="procure_order_view_search" model="ir.ui.view">
        <field name="name">procure order search</field>
        <field name="model">procure.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>

                <filter name="Draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="Sent" string="Sent" domain="[('state','=','sent')]"/>
                <filter name="To Approve" string="To Approve" domain="[('state','=','to_approve')]"/>
                <filter name="Purchase" string="Purchase" domain="[('state','=','purchase')]"/>
                <filter name="Done" string="Done" domain="[('state','=','done')]"/>
                <filter name="Cancel" string="Cancel" domain="[('state','=','cancel')]"/>
            </search>
        </field>
    </record>


    <record id="procure_order_action" model="ir.actions.act_window">
        <field name="name">procure order</field>
        <field name="res_model">procure.order</field>
    </record>


    <menuitem
            id="procure_order_menu_item"
            name="Procure Orders"
            parent="purchases_menu"
            action="procure_order_action"
    />
</odoo>