<odoo>

    <record id="pure_view_tree" model="ir.ui.view">
        <field name="name">pure tree</field>
        <field name="model">pure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="pure_type"/>
                <field name="active" invisible="True"/>
                <field name="name"/>
                <field name="warehouse_id"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <record id="pure_view_form" model="ir.ui.view">
        <field name="name">pure form</field>
        <field name="model">pure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Pure info">
                            <field name="active" invisible="True"/>
                            <field name="pure_type"/>
                            <field name="name"/>
                            <field name="quantity"/>
                        </group>
                        <group string="Additional info">
                            <field name="warehouse_id"/>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="pure_view_search" model="ir.ui.view">
        <field name="name">pure search</field>
        <field name="model">pure</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="warehouse_id"/>
            </search>
        </field>
    </record>



    <record id="pure_action" model="ir.actions.act_window">
        <field name="name">pure</field>
        <field name="res_model">pure</field>
    </record>




    <menuitem
          id="pure_menu_item"
          name="Pure"
          parent="inventory_management_menu"
          action="pure_action"
    />
</odoo>