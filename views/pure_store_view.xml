<odoo>

    <record id="pure_store_view_tree" model="ir.ui.view">
        <field name="name">pure store tree</field>
        <field name="model">pure.store</field>
        <field name="arch" type="xml">
            <tree>
                <field name="purity_type"/>
                <field name="active" invisible="True"/>
<!--                <field name="state"/>-->
                <field name="commissioner_id"/>
                <field name="warehouse_id"/>
                <field name="quantity"/>
<!--                <field name="unit_price"/>-->
                <field name="employee_id"/>
                <field name="receive_date"/>
<!--                <field name="order_date"/>-->
            </tree>
        </field>
    </record>

    <record id="pure_store_view_form" model="ir.ui.view">
        <field name="name">pure store form</field>
        <field name="model">pure.store</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
<!--                    <header>-->
<!--                        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft"/>-->
<!--                        <button name="action_received" type="object" class="btn-secondary" string="Received"/>-->
<!--                        <button name="action_verified" type="object" class="btn-success" string="Verified"/>-->
<!--                        <field name="state" widget="statusbar"/>-->
<!--                    </header>-->
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="commissioner_id"/>
                            <field name="employee_id"/>
                            <field name="quantity"/>
                            <field name="purity_type"/>
<!--                            <field name="unit_price"/>-->
<!--                            <field name="order_date"/>-->
                        </group>
                        <group string="Additional info">
                            <field name="warehouse_id"/>
                            <field name="receive_date"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="pure_store_view_search" model="ir.ui.view">
        <field name="name">pure store search</field>
        <field name="model">pure.store</field>
        <field name="arch" type="xml">
            <search>
                <field name="commissioner_id"/>
                <field name="employee_id"/>
                <field name="warehouse_id"/>
            </search>
        </field>
    </record>



    <record id="pure_store_action" model="ir.actions.act_window">
        <field name="name">pure store</field>
        <field name="res_model">pure.store</field>
    </record>




    <menuitem
          id="pure_store_menu_item"
          name="Pure Store"
          parent="purchases_menu"
          action="pure_store_action"
    />
</odoo>