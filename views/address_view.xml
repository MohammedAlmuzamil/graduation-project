<odoo>

    <record id="address_view_tree" model="ir.ui.view">
        <field name="name">address tree</field>
        <field name="model">address</field>
        <field name="arch" type="xml">
            <tree>
<!--                <field name="employee_id"/>-->
                <field name="ref"/>
                <field name="name"/>
                <field name="active" invisible="True"/>
                <field name="continent"/>
                <field name="country_id"/>
                <field name="country_name"/>
                <field name="state_id"/>
                <field name="state_name"/>
                <field name="locality_id"/>
                <field name="locality_name"/>
                <field name="city_id"/>
                <field name="city_name"/>
            </tree>
        </field>
    </record>

    <record id="address_view_form" model="ir.ui.view">
        <field name="name">address form</field>
        <field name="model">address</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
<!--                            <field name="employee_id"/>-->
                            <field name="name"/>
                            <field name="active" invisible="True"/>
                            <field name="continent"/>
                            <field name="country_id"/>
                            <field name="country_name"/>
                        </group>
                        <group string="Country info">
                            <field name="state_id"/>
                            <field name="state_name"/>
                            <field name="locality_id"/>
                            <field name="locality_name"/>
                            <field name="city_id"/>
                            <field name="city_name"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="address_view_search" model="ir.ui.view">
        <field name="name">address search</field>
        <field name="model">address</field>
        <field name="arch" type="xml">
            <search>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="locality_id"/>
                <field name="city_id"/>
            </search>
        </field>
    </record>



    <record id="address_action" model="ir.actions.act_window">
        <field name="name">address</field>
        <field name="res_model">address</field>
    </record>




    <menuitem
          id="address_menu_item"
          name="Address"
          parent="location_menu"
          action="address_action"
    />
</odoo>