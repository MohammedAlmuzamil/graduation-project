<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="returns_report" model="ir.actions.report">
        <field name="name">Returns Report</field>
        <field name="model">returns</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_returns"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.return_report_template</field>
    </record>

    <template id="return_report_template">
        <t t-call="web.external_layout">
            <main>
                <t t-set="time" t-value="datetime.datetime.now()"/>
                <t t-foreach="docs" t-as="doc">

                    <div class="page">

                        <table style="width:100%; border-collapse:collapse; margin-bottom:15px;">
                            <tr>
                                <td style="width:100px;">
                                    <img t-if="doc.env.company.logo"
                                         t-att-src="'data:image/png;base64,%s' % (doc.env.company.logo.decode())"
                                         style="width:100px; height:auto;"/>
                                </td>
                                <td>
                                    <h2 t-field="doc.env.company.name"/>
                                    <p t-field="doc.env.company.street"/>
                                    <p>
                                        <span t-field="doc.env.company.phone"/>
                                        |
                                        <span t-field="doc.env.company.email"/>
                                    </p>
                                </td>
                                <td style="width:150px; text-align:right;">
                                    <h3>Returns Report</h3>
                                    <p><b>Date:</b> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                                </td>
                            </tr>
                        </table>

                        <hr/>

                        <table style="width:100%; margin-bottom:20px;">
                            <tr>
                                <td style="width:50%; vertical-align:top; text-align:left;">
                                    <table style="width:95%; border-collapse:collapse;">
                                        <tr>
                                            <td style="font-weight:bold;">Return Ref:</td>
                                            <td t-esc="doc.ref or '-'"/>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Return ID:</td>
                                            <td t-esc="doc.name or '-'"/>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Return Date:</td>
                                            <td t-esc="doc.return_date or '-'"/>
                                        </tr>
                                    </table>
                                </td>

                                <td style="width:50%; vertical-align:top; text-align:right;">
                                    <table style="width:95%; float:right; border-collapse:collapse;">
                                        <tr>
                                            <td style="font-weight:bold;">Sale Reference:</td>
                                            <td t-esc="doc.sale_id.name or '-'"/>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Customer:</td>
                                            <td t-esc="doc.customer_id.name or '-'"/>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Warehouse:</td>
                                            <td t-esc="doc.warehouse_id.name or '-'"/>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Return Reason:</td>
                                            <td t-esc="doc.return_reason.name or '-'"/>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>

                        <table class="sale-table" style="width:100%; border-collapse:collapse; margin-top:10px;">
                            <thead>
                                <tr style="background-color:#eb861e; color:white;">
                                    <th>Arabic Gum Type</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td t-esc="dict(line._fields['gum_type'].selection).get(line.gum_type) or '-'"/>
                                        <td t-esc="line.quantity or '-'"/>
                                        <td t-esc="line.unit_price or '-'"/>
                                        <td t-esc="line.subtotal or '-'"/>
                                    </tr>
                                </t>

                                <tr style="font-weight:bold; background:#f0f0f0;">
                                    <td colspan="1" style="text-align:left;">TOTAL</td>
                                    <td t-esc="sum(line.quantity for line in doc.line_ids)"/>
                                    <td t-esc="(
                                        sum(line.unit_price * line.quantity for line in doc.line_ids)
                                        / sum(line.quantity for line in doc.line_ids)
                                        if sum(line.quantity for line in doc.line_ids) else 0
                                    )"/>
                                    <td t-esc="doc.amount_total"/>
                                </tr>
                            </tbody>
                        </table>

                        <table style="width:100%; margin-top:20px; font-size:12px; color:#555;">
                            <tr>
                                <td>Prepared by: <span t-esc="doc.env.user.name"/></td>
                                <td style="text-align:right;">Page <span class="pagenum"/></td>
                            </tr>
                        </table>

                    </div>

                </t>
            </main>

            <style type="text/css" media="print">
                * { -webkit-print-color-adjust: exact !important; }
                .sale-table th, .sale-table td {
                    border:1px solid #ddd;
                    padding:6px;
                    font-size:12px;
                }
                .sale-table th {
                    background-color:#eb861e !important;
                    color:white !important;
                }
                .page {
                    font-family: Arial, Helvetica, sans-serif;
                    font-size:12px;
                    padding:15px;
                    color:#222;
                }
                hr { border:none; border-top:1px solid #ddd; margin:8px 0; }
                .pagenum:after { content: counter(page); }
            </style>

        </t>
    </template>

</odoo>
