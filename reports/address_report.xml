<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="address_report" model="ir.actions.report">
        <field name="name">Address Report</field>
        <field name="model">address</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_address"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.address_report_template</field>
    </record>

    <template id="address_report_template">
        <t t-set="report_encoding" t-value="'utf-8'"/>
        <t t-call="web.html_container">
            <div class="page">

                <div class="report-header" style="display:flex; justify-content: space-between; align-items:flex-start;">
                    <div class="company-left">
                        <img t-if="docs and docs[0].env.company.logo"
                             t-att-src="'data:image/png;base64,%s' % (docs[0].env.company.logo.decode())"
                             style="width: 100px; height: auto; margin-bottom:10px;"/>
                        <h1 t-field="docs and docs[0].env.company.name"/>
                        <p t-field="docs and docs[0].env.company.street"/>
                        <p>
                            <span t-field="docs and docs[0].env.company.phone"/>
                            |
                            <span t-field="docs and docs[0].env.company.email"/>
                        </p>
                    </div>
                    <div class="report-meta" style="text-align:right;">
<!--                        <h2>Address Report</h2>-->
                        <p>
                            <strong>Date:</strong>
                            <t t-esc="time.strftime('%Y-%m-%d')"/>
                        </p>
                    </div>
                </div>

                <hr/>

                <table class="address-table" style="width:100%; border-collapse: collapse; text-align:center; margin-top:10px;">
                    <thead style="background-color:#2F5597; color:white;">
                        <tr>
                            <th>Address ID</th>
                            <th>Continent</th>
                            <th>Country</th>
                            <th>State</th>
                            <th>Locality</th>
                            <th>City</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="addr">
                            <tr>
                                <td t-esc="addr.name"/>
                                <td t-esc="dict(addr._fields['continent'].selection).get(addr.continent)"/>
                                <td t-att-class="'ltr' if addr.country_name.isascii() else ''" t-esc="addr.country_name or '-'"/>
                                <td t-att-class="'ltr' if addr.state_name.isascii() else ''" t-esc="addr.state_name or '-'"/>
                                <td t-att-class="'ltr' if addr.locality_name.isascii() else ''" t-esc="addr.locality_name or '-'"/>
                                <td t-att-class="'ltr' if addr.city_name.isascii() else ''" t-esc="addr.city_name or '-'"/>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <footer class="report-footer" style="display:flex; justify-content: space-between; margin-top:20px; font-size:11px; color:#555;">
                    <div>
                        Prepared by:
                        <span t-esc="docs and docs[0].env.uid and docs[0].env.user.name or 'System'"/>
                    </div>
                    <div class="page-number">
                        Page <span class="pagenum"/>
                    </div>
                </footer>

            </div>
        </t>

        <style>
            .address-table th, .address-table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            .address-table th {
                background-color: #2F5597;
                color: white;
            }

            .page {
                font-family: "Tahoma", "Arial", sans-serif;
                font-size: 12px;
                color: #222;
                padding: 20px;
                direction: rtl;
                text-align: right;
            }

            .ltr {
                direction: ltr;
                text-align: left;
            }

            hr {
                border: none;
                border-top: 1px solid #ddd;
                margin: 12px 0;
            }

            @media print {
                .page {
                    padding: 10mm;
                }
                .pagenum:after {
                    content: counter(page);
                }
            }
        </style>
    </template>
</odoo>
