<odoo>

    <record id="returns_view_tree" model="ir.ui.view">
        <field name="name">returns tree</field>
        <field name="model">returns</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="return_date"/>
                <field name="sale_id"/>
                <field name="customer_id"/>
                <field name="amount_total"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="returns_view_form" model="ir.ui.view">
        <field name="name">returns form</field>
        <field name="model">returns</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm"
                            string="Confirm Return"
                            type="object"
                            class="btn-primary"
                            invisible = "state == 'confirmed'"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </header>
                <sheet>
                    <!--                    <div name="button_box" class="oe_button_box">-->
                    <!--                        <button name="action_open_related_customer"-->
                    <!--                                type="object" icon="fa-user" string="Customer"-->
                    <!--                                invisible="not customer_id"/>-->
                    <!--                    </div>-->
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="name"/>
                            <field name="return_date"/>
                        </group>

                        <group string="Sale details">
                            <field name="customer_id" placeholder="Customer Name"/>
                            <field name="warehouse_id" placeholder="Warehouse Name"/>
                            <field name="active" invisible="True"/>
                            <field name="state" invisible="1"/>
                        </group>

                        <group string="Sale info">
                            <field name="sale_id" placeholder="Sale ID To Be Returned"/>
                            <field name="return_reason" placeholder="Write Your Return Reason Here"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Return Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="gum_type"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Returned Quantity: Kg :
                        <field name="amount_total" readonly="1"/>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="returns_view_search" model="ir.ui.view">
        <field name="name">returns search</field>
        <field name="model">returns</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record id="returns_action" model="ir.actions.act_window">
        <field name="name">returns</field>
        <field name="res_model">returns</field>
    </record>


    <menuitem
            id="returns_menu_item"
            name="Returns"
            parent="sales_menu"
            action="returns_action"
    />
</odoo>