<odoo>

    <record id="arabic_gum_view_tree" model="ir.ui.view">
        <field name="name">arabic gum  tree</field>
        <field name="model">arabic.gum</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="active" invisible="True"/>
                <field name="arabic_gum_id"/>
                <field name="warehouse_id"/>
                <field name="quantity"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="arabic_gum_view_form" model="ir.ui.view">
        <field name="name">arabic gum  form</field>
        <field name="model">arabic.gum</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="arabic_gum_id"/>
                            <field name="warehouse_id" widget="many2many_tags"/>
                        </group>
                        <group string="Gum info">
                            <field name="quantity"/>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="arabic_gum_view_search" model="ir.ui.view">
        <field name="name">arabic gum  search</field>
        <field name="model">arabic.gum</field>
        <field name="arch" type="xml">
            <search>
                <field name="arabic_gum_id"/>
                <field name="warehouse_id"/>
            </search>
        </field>
    </record>



    <record id="arabic_gum_action" model="ir.actions.act_window">
        <field name="name">arabic gum</field>
        <field name="res_model">arabic.gum</field>
    </record>




    <menuitem
          id="arabic_gum_menu_item"
          name="Arabic Gum"
          parent="inventory_management_menu"
          action="arabic_gum_action"
    />
</odoo>