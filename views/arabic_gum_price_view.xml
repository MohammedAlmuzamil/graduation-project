<odoo>

    <record id="arabic_gum_price_view_tree" model="ir.ui.view">
        <field name="name">arabic gum price tree</field>
        <field name="model">arabic.gum.price</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="invoice_id"/>
                <field name="date"/>
                <field name="units"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="arabic_gum_price_view_form" model="ir.ui.view">
        <field name="name">arabic gum price form</field>
        <field name="model">arabic.gum.price</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="name"/>
                            <field name="invoice_id"/>
                        </group>
                        <group string="Additional info">
                            <field name="date"/>
                            <field name="units"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Arabic Gum Price Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="gum_type"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Amount $ :
                        <field name="total_price" readonly="1"/>
                    </div>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="arabic_gum_price_view_search" model="ir.ui.view">
        <field name="name">arabic gum price search</field>
        <field name="model">arabic.gum.price</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>



    <record id="arabic_gum_price_action" model="ir.actions.act_window">
        <field name="name">arabic gum price</field>
        <field name="res_model">arabic.gum.price</field>
    </record>




    <menuitem
          id="arabic_gum_price_menu_item"
          name="Arabic Gum Prices"
          parent="product_menu"
          action="arabic_gum_price_action"
    />
</odoo>