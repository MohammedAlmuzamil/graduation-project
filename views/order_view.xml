<odoo>

    <record id="order_view_tree" model="ir.ui.view">
        <field name="name">order tree</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="state"/>
                <field name="date_order"/>
                <field name="customer_id"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="order_view_form" model="ir.ui.view">
        <field name="name">order form</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Done" bg_color="text-bg-success" invisible="state != 'done'"/>
                    <header>
                        <button name="action_draft" type="object" class="btn-warning" string="Draft"
                        invisible="state in ('draft','sent','sale','done')"/>
                        <button name="action_sent" type="object" class="btn-primary" string="Sent"
                        invisible="state != 'draft'"/>
                        <button name="action_sale" type="object" class="btn-info" string="Sale"
                        invisible="state != 'sent'"/>
                        <button name="action_done" type="object" class="btn-success" string="Done"
                        invisible="state != 'sale'"/>
                        <button name="action_cancel" type="object" class="btn-primary" string="Cancel"
                        invisible="state == 'done'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="name"/>
                            <field name="customer_id" placeholder="Customer Name"/>
                            <field name="date_order"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Orders Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="arabic_gum_type"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div style="text-align: right; margin-top: 15px; font-weight: bold;">
                        Total Quantity Kg :
                        <field name="total_quantity" readonly="1"/>
                    </div>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="order_view_search" model="ir.ui.view">
        <field name="name">order search</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>

                <filter name="Draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="Sent" string="Sent" domain="[('state','=','sent')]"/>
                <filter name="Sale" string="Sale" domain="[('state','=','sale')]"/>
                <filter name="Done" string="Done" domain="[('state','=','done')]"/>
                <filter name="Cancel" string="Cancel" domain="[('state','=','cancel')]"/>
            </search>
        </field>
    </record>



    <record id="order_action" model="ir.actions.act_window">
        <field name="name">order</field>
        <field name="res_model">order</field>
    </record>




    <menuitem
          id="order_menu_item"
          name="Orders"
          parent="sales_menu"
          action="order_action"
    />
</odoo>