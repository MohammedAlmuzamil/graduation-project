<odoo>

    <record id="procure_order_view_tree" model="ir.ui.view">
        <field name="name">procure order tree</field>
        <field name="model">procure.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="commissioner_id"/>
                <field name="active" invisible="True"/>
                <field name="gum_id"/>
                <field name="quality"/>
                <field name="quantity"/>
                <field name="unit_price"/>
                <field name="order_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="procure_order_view_form" model="ir.ui.view">
        <field name="name">procure order form</field>
        <field name="model">procure.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="commissioner_id"/>
                            <field name="gum_id"/>
                            <field name="quality"/>
                        </group>
                        <group string="Additional info">
                            <field name="order_id"/>
                            <field name="quantity"/>
                            <field name="unit_price"/>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="procure_order_view_search" model="ir.ui.view">
        <field name="name">procure order search</field>
        <field name="model">procure.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="commissioner_id"/>
            </search>
        </field>
    </record>



    <record id="procure_order_action" model="ir.actions.act_window">
        <field name="name">procure order</field>
        <field name="res_model">procure.order</field>
    </record>




    <menuitem
          id="procure_order_menu_item"
          name="Procure Orders"
          parent="purchases_menu"
          action="procure_order_action"
    />
</odoo>