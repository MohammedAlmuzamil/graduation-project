<odoo>

    <record id="gum_stock_view_tree" model="ir.ui.view">
        <field name="name">Gum Stock tree</field>
        <field name="model">gum.stock</field>
        <field name="arch" type="xml">
            <tree>
                <field name="talha_quantity"/>
                <field name="hashab_quantity"/>
                <field name="olibanum_quantity"/>
                <field name="refined_quantity"/>
                <field name="update_date"/>
                <field name="min_stock_level"/>
                <field name="max_stock_level"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="gum_stock_view_form" model="ir.ui.view">
        <field name="name">Gum Stock form</field>
        <field name="model">gum.stock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Talaha Stock">
                            <field name="talha_quantity"/>
                        </group>
                        <group string="Hashab Stock">
                            <field name="hashab_quantity"/>
                        </group>
                        <group string="Olibanum Stock">
                            <field name="olibanum_quantity"/>
                        </group>
                        <group string="Refined Stock">
                            <field name="refined_quantity"/>
                        </group>
                        <group string="Max Stock Level">
                            <field name="max_stock_level"/>
                        </group>
                        <group string="Min Stock Level">
                            <field name="min_stock_level"/>
                        </group>
                        <group string="Update on Stock">
                            <field name="update_date"/>
                        </group>
                        <group string="Total">
                            <field name="total_quantity"/>
                        </group>
                        <group string="Description">
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="gum_stock_view_search" model="ir.ui.view">
        <field name="name">gum_stock search</field>
        <field name="model">gum.stock</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>



    <record id="gum_stock_action" model="ir.actions.act_window">
        <field name="name">gum_stock</field>
        <field name="res_model">gum.stock</field>
    </record>




    <menuitem
          id="gum_stock_menu_item"
          name="Stock"
          parent="inventory_management_menu"
          action="gum_stock_action"
    />
</odoo>