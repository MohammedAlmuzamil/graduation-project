<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="commissioner_report" model="ir.actions.report">
        <field name="name">Commissioner Report</field>
        <field name="model">commissioner</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_model_id" ref="model_commissioner"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.commissioner_report_template</field>
    </record>

    <template id="commissioner_report_template">
        <t t-set="report_encoding" t-value="'utf-8'"/>
        <t t-call="web.html_container">
            <div class="page">

                <div class="report-header" style="display:flex; justify-content: space-between; align-items:flex-start;">
                    <div class="company-left">
                        <img t-if="docs and docs[0].env.company.logo"
                             t-att-src="'data:image/png;base64,%s' % (docs[0].env.company.logo.decode())"
                             style="width: 100px; height: auto; margin-bottom:10px;"/>
                        <h1 t-field="docs and docs[0].env.company.name"/>
                        <p t-field="docs and docs[0].env.company.street"/>
                        <p>
                            <span t-field="docs and docs[0].env.company.phone"/> |
                            <span t-field="docs and docs[0].env.company.email"/>
                        </p>
                    </div>
                    <div class="report-meta" style="text-align:right;">
                        <h2>Commissioner Report</h2>
                        <p><strong>Ref:</strong> <span t-esc="docs and docs[0].ref or '-'"/></p>
                        <p><strong>Date:</strong> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                    </div>
                </div>

                <hr/>

                <table class="commissioner-table" style="width:100%; border-collapse: collapse; text-align:left; margin-top:10px;">
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <th>Commissioner Name</th>
                                <td t-esc="doc.name or '-'"/>
                                <th>Commissioner ID</th>
                                <td t-esc="doc.comm_id or '-'"/>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td t-esc="doc.phone or '-'"/>
                                <th>Email</th>
                                <td t-esc="doc.email or '-'"/>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td colspan="3"><t t-esc="doc.address or '-'"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <footer class="report-footer" style="display:flex; justify-content: space-between; margin-top:20px; font-size:11px; color:#555;">
                    <div>Prepared by: <span t-esc="docs and docs[0].env.user.name or 'System'"/></div>
                    <div class="page-number">Page <span class="pagenum"/></div>
                </footer>

            </div>
        </t>

        <style>
            .commissioner-table th, .commissioner-table td { padding: 8px; vertical-align: top; border-bottom: 1px solid #eee; }
            .commissioner-table th { background-color: #f7f7f7; width: 20%; }
            .page { font-family: Arial, Helvetica, sans-serif; font-size: 12px; color: #222; padding: 20px; }
            hr { border: none; border-top: 1px solid #ddd; margin: 12px 0; }
            @media print { .page { padding: 10mm; } .pagenum:after { content: counter(page); } }
        </style>

    </template>
</odoo>
