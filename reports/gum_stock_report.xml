<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gum_stock_report_action" model="ir.actions.report">
        <field name="name">Gum Stock Report</field>
        <field name="model">gum.stock</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_gum_stock"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.gum_stock_report_template</field>
    </record>

    <template id="gum_stock_report_template">
        <t t-call="web.html_container">
            <div class="page">

                <!-- Header -->
                <div style="display:flex; justify-content: space-between; align-items:flex-start;">
                    <div>
                        <img t-if="docs[0].env.company.logo"
                             t-att-src="'data:image/png;base64,%s' % (docs[0].env.company.logo.decode())"
                             style="width:100px; margin-bottom:10px;"/>
                        <h2 t-field="docs[0].env.company.name"/>
                        <p t-field="docs[0].env.company.street"/>
                        <p>
                            <span t-field="docs[0].env.company.phone"/> |
                            <span t-field="docs[0].env.company.email"/>
                        </p>
                    </div>
                </div>

                <hr style="margin-top:10px;"/>

                <!-- Summary Info -->
                <table class="summary-table">
                    <tbody>
                        <tr><td><strong>Minimum Level:</strong></td> <td><t t-esc="docs[0].min_stock_level"/></td></tr>
                        <tr><td><strong>Maximum Level:</strong></td> <td><t t-esc="docs[0].max_stock_level"/></td></tr>
                        <tr><td><strong>Last Update:</strong></td> <td><t t-esc="docs[0].update_date or '-'"/></td></tr>
                        <tr><td><strong>Note:</strong></td> <td><t t-esc="docs[0].description or '-'"/></td></tr>
                    </tbody>
                </table>

                <!-- Stock Table -->
                <h3 style="margin-top:20px;">Current Gum Stock Levels</h3>
                <table class="item-table" style="width:100%; border-collapse:collapse; text-align:center;">
                    <thead>
                        <tr style="background-color:#eb861e; color:white;">
                            <th>Arabic Gum Type</th>
                            <th>Quantity (KG)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>Talha Gum On Hand Quantity</td><td t-esc="docs[0].talha_quantity"/></tr>
                        <tr><td>Hashab Gum On Hand Quantity</td><td t-esc="docs[0].hashab_quantity"/></tr>
                        <tr><td>Olibanum Gum On Hand Quantity</td><td t-esc="docs[0].olibanum_quantity"/></tr>
                        <tr><td>Refined Gum On Hand Quantity</td><td t-esc="docs[0].refined_quantity"/></tr>
                    </tbody>
                    <tfoot>
                        <tr class="total-row">
                            <td><strong>Total Stock</strong></td>
                            <td><strong><t t-esc="docs[0].total_quantity"/> KG</strong></td>
                        </tr>
                    </tfoot>
                </table>

                <!-- Footer -->
                <footer style="display:flex; justify-content: space-between; margin-top:25px; font-size:11px; color:#555;">
                    <div>Prepared by: <span t-esc="docs[0].env.user.name"/></div>
                    <div>Page <span class="pagenum"/></div>
                </footer>

            </div>

            <style>
                .page {
                    font-family: Arial, Helvetica, sans-serif;
                    font-size: 13px;
                    padding: 20px;
                    color: #222;
                }
                .summary-table td {
                    padding: 4px 10px;
                }
                .item-table th, .item-table td {
                    border: 1px solid #ddd;
                    padding: 8px;
                }
                .item-table thead {
                    background-color: #eb861e;
                    color: white;
                }
                .total-row {
                    color: black;
                }
                hr { border-top: 1px solid #ccc; }
                @media print {
                    .pagenum:after { content: counter(page); }
                }
            </style>
        </t>
    </template>
</odoo>
