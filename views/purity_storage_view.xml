<odoo>

    <record id="purity_storage_view_tree" model="ir.ui.view">
        <field name="name">purity storage tree</field>
        <field name="model">purity.storage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="warehouse_id"/>
                <field name="active" invisible="True"/>
                <field name="employee_id"/>
                <field name="storing_date"/>
                <field name="received_qty"/>
            </tree>
        </field>
    </record>

    <record id="purity_storage_view_form" model="ir.ui.view">
        <field name="name">purity storage form</field>
        <field name="model">purity.storage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="active" invisible="True"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group>
                            <field name="storing_date"/>
                            <field name="received_qty"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="purity_storage_view_search" model="ir.ui.view">
        <field name="name">purity storage search</field>
        <field name="model">purity.storage</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="warehouse_id"/>
            </search>
        </field>
    </record>



    <record id="purity_storage_action" model="ir.actions.act_window">
        <field name="name">purity storage</field>
        <field name="res_model">purity.storage</field>
    </record>




    <menuitem
          id="purity_storage_menu_item"
          name="Purity Storage"
          parent="operation_menu"
          action="purity_storage_action"
    />
</odoo>