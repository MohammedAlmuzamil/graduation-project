<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="address_report" model="ir.actions.report">
        <field name="name">Address Report</field>
        <field name="model">address</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="boraush_trading.model_address"/>
        <field name="binding_type">report</field>
        <field name="report_name">boraush_trading.address_report_template</field>
    </record>

    <template id="address_report_template">
        <t t-set="report_encoding" t-value="'utf-8'"/>
        <t t-set="time" t-value="datetime.datetime.now()"/>
        <t t-call="web.html_container">
            <div class="page">

                <div class="report-header"
                     style="display:flex; justify-content: space-between; align-items:flex-start;">
                    <div class="company-left">
                        <img t-if="docs and docs[0].env.company.logo"
                             t-att-src="'data:image/png;base64,%s' % (docs[0].env.company.logo.decode())"
                             style="width:100px; height:auto; margin-bottom:10px;"/>
                        <h1 t-field="docs and docs[0].env.company.name"/>
                        <p t-field="docs and docs[0].env.company.street"/>
                        <p>
                            <span t-field="docs and docs[0].env.company.phone"/>
                            |
                            <span t-field="docs and docs[0].env.company.email"/>
                        </p>
                    </div>
                    <div class="report-meta" style="text-align:left;">
                        <p><strong>Date:</strong> <t t-esc="time.strftime('%Y-%m-%d')"/></p>
                    </div>
                </div>

                <hr/>

                <table class="address-table"
                       style="width:100%; border-collapse: collapse; text-align:center; margin-top:10px;">
                    <thead style="background-color:#eb861e; color:white;">
                        <tr>
                            <th>Address ID</th>
                            <th>Address</th>
                            <th>Postcode</th>
                            <th>Street Number</th>
                            <th>Building Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="addr">
                            <tr>
                                <td t-esc="addr.address_id or '-'"/>
                                <td t-esc="addr.name.name or '-'"/>
                                <td t-esc="addr.postcode or '-'"/>
                                <td t-esc="addr.street_no or '-'"/>
                                <td t-esc="addr.building_no or '-'"/>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <footer class="report-footer"
                        style="display:flex; justify-content: space-between; margin-top:20px; font-size:11px; color:#555;">
                    <div>
                        Prepared by: <span t-esc="docs and docs[0].env.user.name or 'System'"/>
                    </div>
                    <div class="page-number">
                        Page <span class="pagenum"/>
                    </div>
                </footer>

            </div>
        </t>

        <style>
            .address-table th, .address-table td { border:1px solid #ddd; padding:8px; }
            .address-table th { background-color:#eb861e; color:white; }
            .page { font-family:Arial, Helvetica, sans-serif; font-size:12px; color:#222; padding:20px; }
            hr { border:none; border-top:1px solid #ddd; margin:12px 0; }
            @media print { .page { padding:10mm; } .pagenum:after { content:counter(page); } }
        </style>
    </template>
</odoo>
