<odoo>

    <record id="purchase_view_tree" model="ir.ui.view">
        <field name="name">purchase tree</field>
        <field name="model">purchase</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="purchase_id"/>
                <field name="active" invisible="True"/>
                <field name="purchase_date"/>
                <field name="total_price"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="purchase_view_form" model="ir.ui.view">
        <field name="name">purchase form</field>
        <field name="model">purchase</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Confirm" type="object" name="confirm_purchase" class="btn-primary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="active" invisible="True"/>
                            <field name="purchase_id"/>
                            <field name="purchase_date"/>
                        </group>
                        <group string="Description">
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Purchase Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="commissioner_id"/>
                                    <field name="gum_type"/>
                                    <field name="color"/>
                                    <field name="quality"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="warehouse_id"/>
                                    <field name="total_price" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group string="Total Purchase">
                        <field name="total_price" readonly="1" widget="monetary"
                               options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="purchase_view_search" model="ir.ui.view">
        <field name="name">purchase search</field>
        <field name="model">purchase</field>
        <field name="arch" type="xml">
            <search>
                <field name="purchase_id"/>
            </search>
        </field>
    </record>



    <record id="purchase_action" model="ir.actions.act_window">
        <field name="name">purchase</field>
        <field name="res_model">purchase</field>
    </record>




    <menuitem
          id="purchase_menu_item"
          name="Purchases"
          parent="purchases_menu"
          action="purchase_action"
    />
</odoo>