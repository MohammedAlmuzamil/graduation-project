<odoo>

    <record id="address_view_tree" model="ir.ui.view">
        <field name="name">address tree</field>
        <field name="model">address</field>
        <field name="arch" type="xml">
            <tree string="Address">
                <field name="ref"/>
                <field name="address_id"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="street_no"/>
                <field name="building_no"/>
                <field name="active" invisible="True"/>
            </tree>
        </field>
    </record>

    <record id="address_view_form" model="ir.ui.view">
        <field name="name">address form</field>
        <field name="model">address</field>
        <field name="arch" type="xml">
            <form string="Address">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General info">
                            <field name="address_id"/>
                            <field name="name" placeholder="Enter Locality Name"/>
                            <field name="active" invisible="True"/>
                        </group>
                        <group string="Additional info">
                            <field name="postcode"/>
                            <field name="street_no"/>
                            <field name="building_no"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


